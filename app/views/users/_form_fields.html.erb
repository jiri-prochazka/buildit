
<div class="form-group">
  <%= f.label :email, class: "col-md-offset-2 col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.email_field :email, autofocus: true, placeholder: "", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :name, class: "col-md-offset-2 col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.text_field :name, placeholder: "", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :surname, class: "col-md-offset-2 col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.text_field :surname, placeholder: "", class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :phone, class: "col-md-offset-2 col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.text_field :phone, placeholder: "", class: "form-control" %>
  </div>
</div>
<%= f.fields_for :addresses, @address do |b| %>
  <%= render :partial => "addresses/form_fields", locals: {b: b} %>
<% end %>

<div class="form-group">
  <%= f.label :password, class: "col-md-offset-2 col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, class: "col-md-offset-2 col-md-2 control-label" %>
  <div class="col-md-6">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
  </div>
</div>