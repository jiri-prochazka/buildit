<div class="row">
  <br/>
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading"><h3 class="panel-title"><strong>Sign In </strong></h3></div>
      <div class="panel-body">
        <%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
        

        <div class="form-group">
          <%= f.label :email, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :name, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :name, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :surname, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :surname, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :phone, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>
        
        <%= f.fields_for :addresses, Address.new do |b| %>
          <%= render :partial => "addresses/form_fields", locals: {b: f} %>
        <% end %>

        <div class="form-group">
          <%= f.label :password, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-4 col-md-5">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
        </div>

      </div>
      <% end %>


    </div>
  </div>
</div>
</div>