<div class="row">
  <div class="col-md-6">
    <h2>Edit Account</h2>
    <div class="panel panel-success">
      <div class="panel-heading"><h3 class="panel-title"><strong>Account </strong></h3></div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, class: "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.email_field :email, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :name, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :name, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :surname, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :surname, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :phone, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :phone, autofocus: true, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :current_password, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-4 col-md-5">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        </div>

      </div>
      <% end %>
      <hr/>
      <div class="text-center">
        <h3>Delete my account</h3>
        <p><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <h2>My Addresses</h2>
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title"><strong>List of addresses </strong></h3>
      </div>
      <div class="panel-body text-center">
        <%= link_to("New Address", new_user_address_path(current_user) , class: "btn btn-primary btn-block") %>
      </div>
      <div class="list-group">
          <% current_user.addresses.each do |address|  %>
            
              <%= link_to( edit_user_address_path(current_user,address), class: "list-group-item" ) do %>
              <address>
                <h4 class="list-group-item-heading"><%= address.street %></h4>
                <h4 class="list-group-item-heading"><%= address.city %></h4>
                <h4 class="list-group-item-heading"><%= address.zip %> <%= address.country %></h4>
              </address>
              <% end %>
           
          <% end %>
        </div>
    </div>

  </div>
</div>

