<p id="notice"><%= notice %></p>

<h1>Listing Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Confirmed at</th>
      <th>Progress</th>
      <th>Estimated time</th>
      <th>Estimated price</th>
      <th>Real price</th>
      <th>Completed at</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.confirmed_at %></td>
        <td><%= job.progress %></td>
        <td><%= job.estimated_time %></td>
        <td><%= job.estimated_price %></td>
        <td><%= job.real_price %></td>
        <td><%= job.completed_at %></td>
        <td><%= job.project %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

