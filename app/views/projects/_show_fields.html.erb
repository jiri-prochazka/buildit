<div class="col-xs-12 col-md-6 ">
  <div class="panel <%= project.archived ? 'panel-default' : 'panel-success'  %>">
    <div class="panel-heading">
      <h3 class="panel-title"><strong><%= project.name %></strong></h3>
    </div>
    <div class="panel-body">
      <p><strong>Estimated finish: </strong><%= project.estimated_finish.strftime('%d.%m.%Y') %></p>
      <p><strong>Estimated price: </strong><%= project.estimated_price %></p>
      <p><strong>Estimated time: </strong><%= project.estimated_time %>h</p>
      <p><strong>Completed: </strong><%= project.progress %>%</p>
      <div class="col-md-12">
        <input type="text" class="form-control progress input-large" data-slider-value='<%= project.progress.to_s %>' data-slider-enabled='false'%>
        <hr/>
      </div>
      <%= link_to "Details", project_path(project), class: "btn btn-success btn-sm" %>
      <%= link_to 'Edit', edit_project_path(project), remote: true, class: "btn btn-primary btn-sm" %>
      <%= link_to (project.archived ? 'Activate' : 'Archive'), archive_project_path(project), class: "btn btn-warning btn-sm", method: :put %>
    </div>
  </div>
</div>