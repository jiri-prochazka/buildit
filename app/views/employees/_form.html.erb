<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading"><h3 class="panel-title"><strong>Employee </strong></h3></div>
      <div class="panel-body">
        <%= form_for(@employee, html: {class: "form-horizontal"}) do |f| %>

        <% if @employee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

          <ul>
            <% @employee.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= render :partial => "users/form_fields", locals: {f: f} %>

        <div class="form-group">
          <%= f.label :employed_since, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :employed_since, placeholder: "DD.MM.YYYY", class: "form-control" %>
          </div>
        </div>
        
        <div class="form-group">
          <%= f.label :position, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :position, placeholder: "", class: "form-control" %>
          </div>
        </div>


        <div class="form-group">
          <div class="col-md-offset-4 col-md-5">
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

