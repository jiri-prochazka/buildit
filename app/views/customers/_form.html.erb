<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="panel panel-success">
      <div class="panel-heading"><h3 class="panel-title"><strong>Customer </strong></h3></div>
      <div class="panel-body">
        <%= form_for(@customer, html: {class: "form-horizontal"}) do |f| %>

        <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
            <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>

        <%= render :partial => "users/form_fields", locals: {f: f} %>

        <div class="form-group">
          <%= f.label :salutation, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.text_field :salutation, placeholder: "", class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :nationality, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.country_select :nationality, { priority_countries: ["CZ", "SK", "DE", "GB", "AT"], selected: "CZ" }, { class: 'form-control'} %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :newsletter, class: "col-md-offset-2 col-md-2 control-label" %>
          <div class="col-md-6">
            <%= f.check_box :newsletter, placeholder: "", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-4 col-md-5">
            <%= f.submit "Save", class: "btn btn-primary" %>
          </div>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
